<!doctype html>
<html lang=en-US>
  <head>
    <%- include('../includes/meta.html') -%>
    <title><%= identifier %> <%= edition %></title>
    <%- include('../includes/head.html') -%>
  </head>
  <body>
    <%- include('../includes/banner.html') %>
    <%- include('../includes/navigation.html') %>
    <main role=main>
      <h2><%= identifier %></h2>
      <p class=edition><%= editionSpelled %></p>
      <%_ if (edition === latest) { _%>
      <aside>
        This is the latest edition of this clause.
        <%_ if (!onlyEdition) { _%>
          <a href=/<%= identifier %>>Previous editions</a> remain available.
        <%_ } _%>
      </aside>
      <%_ } else { _%>
      <p>A <a href=/<%= identifier %>/<%= latest %>>newer edition</a> of this clause is available.</p>
      <%_ } _%>
      <h3>Terms</h3>
      <blockquote><%- termsHTML %></blockquote>
      <h3>Information</h3>
      <table>
        <tr>
          <th><a href=https://en.wikipedia.org/wiki/Permalink target=_blank>Permalink</a></th>
          <td><a href=<%= permalink %>><%= permalink %></a></td>
        </tr>
        <%_ if (frontMatter.description) { _%>
        <tr>
          <th>Description</th>
          <td><%= frontMatter.description %></td>
        </tr>
        <%_ } _%>
        <%_ if (frontMatter.jurisdictions) { _%>
        <tr>
          <th>Jurisdictions</th>
          <td>
            <ul>
              <%_ frontMatter.jurisdictions.forEach(jurisdiction => { _%>
              <li><%= jurisdiction %></li>
              <%_ }) _%>
            </ul>
          </td>
        </tr>
        <%_ } _%>
        <%_ if (frontMatter.license) { _%>
        <tr>
          <th>License</th>
          <td><%= frontMatter.license %></td>
        </tr>
        <%_ } _%>
        <%_ if (frontMatter.published) { _%>
        <tr>
          <th>Published</th>
          <td><%= frontMatter.published %></td>
        </tr>
        <%_ } _%>
      </table>
      <h3>Comments</h3>
      <%_ if (commentary) { _%><%- commentaryHTML -%><%_ } _%>
    </main>
      <%- include('../includes/contentinfo.html') -%>
  </body>
</html>
